<idea-plugin>
    <id>com.mgarciaguerr.avocado.plugin</id>
    <name>Vector Drawable optimization tool</name>
    <version>1.0</version>
    <vendor email="marc.garcia.guerrero@gmail.com" url="https://github.com/mgarciaguerrero">Marc Garcia</vendor>

    <description><![CDATA[
      This plugin is based on <a href="https://github.com/alexjlockwood/avocado">avocado tool</a> from
      <a href="https://github.com/alexjlockwood">from Alex Lockwood</a>.
      Avocado is a command line tool that optimizes Android VectorDrawable and AnimatedVectorDrawable xml files.<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="com.mgarciaguerr.avocado.plugin.OptimizationFileVectorAction"
                class="com.mgarciaguerr.avocado.plugin.OptimizationFileVectorAction"
                text="Optimize vector"
                description="Vector Drawable optimization tool"
                icon="/resources/avocado.png">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="com.mgarciaguerr.avocado.plugin.OptimizationDrawableVectorAction"
                class="com.mgarciaguerr.avocado.plugin.OptimizationDrawableVectorAction"
                text="Optimize all vectors"
                description="Vector Drawable optimization tool"
                icon="/resources/avocado.png">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>